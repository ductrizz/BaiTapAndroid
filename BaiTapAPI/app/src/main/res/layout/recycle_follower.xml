<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_90dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgFollower"
            android:layout_width="@dimen/dim_80dp"
            android:layout_height="@dimen/dim_80dp"
            android:background="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:weightSum="2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtUserFollower"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_40dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:gravity="center_vertical"
                android:text="@string/Follower"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIDFollower"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_40dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:gravity="center_vertical"
                android:text="@string/idFollower"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_20sp"
                android:textStyle="italic" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>



